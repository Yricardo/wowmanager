{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="wow-login-container" style="display: flex; justify-content: center;">
        {{ form_start(registrationForm, {attr: {class: 'wow-login-form'}}) }}
        <div class="wow-login-header">
            <h1>Register</h1>
            {{ form_errors(registrationForm, {attri: {class: 'wow-login-container'}}) }}
        </div>
        <div class="wow-form-group">
            {{ form_row(registrationForm.username) }}        
        </div>
        <div class="wow-form-group">
            {{ form_row(registrationForm.password, {
                label: 'Password'
            })}}
        </div>
        <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>    
{% endblock %}