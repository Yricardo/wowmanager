{% extends 'base.html.twig' %}

{% block title %}User admin Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/memberdashboard.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/member.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="profile-container">
        <!-- Left Block: Activity Feed -->
        <div class="profile-feed">
            <h2>Activity Feed</h2> 

            <div class="feed-switch">
                <button class="feed-button" role="button">Guild</button>
                <button class="feed-button" role="button">Friends</button>
                <button class="feed-button" role="button">Auctions</button>
                <button class="feed-button" role="button">All</button>
            </div>

            <ul class="feed-items">
                <li class="feed-card">
                    <div class="feed-icon">🏰</div>
                    <div class="feed-details">
                        <h3>Guild Event</h3>
                        <p><strong>Description:</strong> Raid scheduled for Friday</p>
                        <p><strong>Attendees:</strong> 12</p>
                    </div>
                    <button class="feed-clear-button" title="Remove Feed Item">❌</button>                    
                </li>
                <li class="feed-card">
                    <div class="feed-icon">👥</div>
                    <div class="feed-details">
                        <h3>Friend Activity</h3>
                        <p><strong>Description:</strong> JohnDoe reached level 70</p>
                        <p><strong>Time:</strong> 2 hours ago</p>
                    </div>
                    <button class="feed-clear-button" title="Remove Feed Item">❌</button>
                </li>
                <li class="feed-card">
                    <div class="feed-icon">⚖️</div>
                    <div class="feed-details">
                        <h3>Auction Update</h3>
                        <p><strong>Description:</strong> Your item was sold for 500 gold</p>
                        <p><strong>Buyer:</strong> Player123</p>
                    </div>
                    <button class="feed-clear-button" title="Remove Feed Item">❌</button>
                </li>
            </ul>
        </div>

        <!-- Center Upper Block: Navigation Menu -->
        <div class="profile-menu">
            <nav>
                <ul class="menu-items">
                    <li><a href="{{ path('app_member')}}"><span class="menu-icon">🏠</span> </a></li>
                    <li><a href="#"><span class="menu-icon">👥</span><span class="notification-badge">3</span></a></li>
                    <li><a href="#"><span class="menu-icon">🏰</span><span class="notification-badge">3</span></a></li>
                    <li><a href="{{ path('app_auction_list')}}"><span class="menu-icon">⚖️</span><span class="notification-badge">3</span></a></li>
                    <li><a href="#"><span class="menu-icon">📅</span><span class="notification-badge">3</span></a></li>
                    <li><a href="#"><span class="menu-icon">🎰</span></a></li>
                    <li><a href="#"><span class="menu-icon">✉️</span></a></li>
                    <li><a href="#"><span class="menu-icon">⚙️</span></a></li>
                    <li><a href="{{ path('app_logout') }}"><span class="menu-icon">🚪</span></a></li>
                </ul>
            </nav>
        </div>

        {% block template %}
        {% endblock %}

        <button class="feed-icon-button feed-toogle" id="hide-feed" title="Hide Feed" onclick="hideFeed()">
            <span class="feed-icon">❌</span>
        </button>        

        <!-- Show Feed Button -->
        <span id="show-feed" class="feed-toogle">
            <button class="feed-icon-button" id="show-feed-btn" title="Show Feed" onclick="showFeed()">
                <span class="feed-icon">📜</span>
            </button>
        </span>
{% endblock %}