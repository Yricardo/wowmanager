<div class="friends-list-container" style="min-width:300px; max-width: 700px; margin: 0 auto;">
    <h2 style="text-align: center; margin-bottom: 1.5rem; width:100%">My Friends</h2>
    {% if friends is defined and friends|length > 0 %}
        <div class="friends-list" style="max-width:100%; display: flex; flex-direction: column; gap: 1rem;">
            {% for friend in friends %}
                <div class="friend-card" style="display: flex; align-items: space-around; background: #23272b; border-radius: 10px; padding: 1rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                    <div class="friend-avatar" style="flex-shrink: 0;">
                        <img src="{{ asset(friend.avatarPath|default('images/anonymous-profile.png')) }}" alt="{{ friend.username }}" style="width: 64px; height: 64px; border-radius: 50%; border: 2px solid #444;">
                    </div>
                    <div class="friend-info" style="margin-left: 1.5rem; flex: 1;">
                        <h3 style="margin: 0 0 0.3rem 0;">{{ friend.username }}</h3>
                        <p style="margin: 0; color: #aaa;">
                        <strong>Status:</strong>
                        {% if 1 == 1 %}
                            <span style="color: #4caf50;">‚óè Online</span>
                        {% else %}
                            <span style="color: #f44336;">‚óè Offline</span>
                        {% endif %}
                        </p>
                        <p style="margin: 0.2rem 0 0 0; font-size: 0.95em;">
                        <strong>üëÆ:</strong> x
                        | <strong>‚úâÔ∏è:</strong> X
                        | <strong>‚öñÔ∏è:</strong> X                                        
                        </p>
                    </div>
                    <div class="friend-actions" style="display: flex; flex-direction: column; gap: 0.5rem;">
                            <a href="{{ path('app_member_message', {id : friend.id})}}" class="button-6" style="background-color: #141618;padding: 0.3rem 1rem;min-width:80px; font-size:2rem;">‚úâÔ∏è</a>                                
                            <a href="#" class="button-6" style="min-width:80px; background: #c0392b; color: #fff; padding: 0.3rem 1rem;">Remove friend</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p style="text-align: center; color: #aaa;">You have no friends yet. üò¢</p>
    {% endif %}
    <div style="height:100%; display: flex; justify-content: space-around;">
        <a href="{{ path('app_member_add_friend') }}" class="button-6" style="font-size: 1.1em;">Add friend</a>
        <a href="{{ path('app_member_add_friend') }}" class="button-6" style="font-size: 1.1em;">Invite friend</a>
        <a href="{{ path('app_member_add_friend') }}" class="button-6" style="font-size: 1.1em;">Search profiles</a>
    </div>
</div>